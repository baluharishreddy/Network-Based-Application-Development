<%- include('../partials/header.ejs')%>
    <div class="content">
        <form action='/events' method='POST'>
            <table>
                <tr>
                    <td><label for="category">Category</label></td>
                    <td><input type="text" id="category" name="category" placeholder="eg. Department" class="fixed-width"></td>
                </tr>
                <tr>
                    <td><label for="name">Name</label></td>
                    <td><input type="text" id="name" name="name" placeholder="name" class="fixed-width"></td>
                </tr>
                <tr>
                    <tr>
                        <td><label for="head">Head</label></td>
                        <td><input type="text" id="head" name="head" placeholder="head " class="fixed-width"></td>
                    </tr>
                    <tr>
                        <td><label for="dean">Dean</label></td>
                        <td><input type="text" id="dean" name="dean" placeholder="dean" class="fixed-width"></td>
                    </tr>
                    <tr>
                    <td><label for="start_time">Start time</label></td>
                    <td><input type="time" id="start_time" name="start_time"></td>
                </tr>
                <tr>
                    <td><label for="end_time">End time</label></td>
                    <td><input type="time" id="end_time" name="end_time"></td>
                </tr>
                <tr>
                    <td><label for="contact">Contact</label></td>
                    <td><input type="email" id="contact" name="contact"></td>
                </tr>
                <tr>
                    <td><label for="location">Location</label></td>
                    <td><input type="text" id="location" name="location" placeholder="address" class="fixed-width"></td>
                </tr>
                <tr>
                    <td><label for="image">Image</label></td>
                    <td><input type="text" name="image" id="image" placeholder="Event image URL" class="fixed-width"></td>
                </tr>
                <tr>
                    <td><label for="Description">Description</label></td>
                    <td><textarea name="Description" id="Description" rows="5" cols="50"></textarea></td>
                </tr>
                <tr>
                    <td><input type="submit" value="ADD" id="submit"></td>
                </tr>
            </table>
        </form>

    </div>
    <%- include('../partials/footer.ejs')%>